<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mathsistor.m.calculator.CalculatorActivity">

    <TextView
        style="@style/display"
        android:id="@+id/result_display"
        android:text="0"
        android:background="@android:color/holo_green_dark"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <TextView
        style="@style/display"
        android:id="@+id/operation_display"
        android:text=""
        android:background="@android:color/holo_blue_dark"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:textSize="20sp"
                android:text="rand"
                android:backgroundTint="@android:color/holo_orange_dark" />

            <Button
                style="@style/trig"
                android:text="sin" />

            <Button
                style="@style/trig"
                android:text="cos" />

            <Button
                style="@style/trig"
                android:text="tan" />

            <Button
                style="@style/cal_button"
                android:onClick="clearEverything"
                android:text="C"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:text="xʸ"
                android:backgroundTint="@color/powers" />

            <Button
                style="@style/constant"
                android:text="π" />

            <Button
                style="@style/exponential"
                android:text="10ˣ" />

            <Button
                style="@style/exponential"
                android:text="log" />

            <Button
                style="@style/cal_button"
                android:text="←"
                android:backgroundTint="?attr/colorAccent"
                android:textColor="@android:color/background_light"
                android:onClick="delete"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:text="∛"
                android:backgroundTint="@color/third_power" />

            <Button
                style="@style/constant"
                android:text="e" />

            <Button
                style="@style/exponential"
                android:textSize="24sp"
                android:text="eˣ" />

            <Button
                style="@style/exponential"
                android:text="ln" />

            <Button
                style="@style/purple"
                android:text="×" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:text="x³"
                android:backgroundTint="@color/third_power" />

            <Button
                style="@style/digit"
                android:text="7" />

            <Button
                style="@style/digit"
                android:text="8" />

            <Button
                style="@style/digit"
                android:text="9" />

            <Button
                style="@style/purple"
                android:text="÷" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:text="√"
                android:backgroundTint="@color/second_power" />

            <Button
                style="@style/digit"
                android:text="4" />

            <Button
                style="@style/digit"
                android:text="5" />

            <Button
                style="@style/digit"
                android:text="6" />

            <Button
                style="@style/purple"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:text="x²"
                android:backgroundTint="@color/second_power" />

            <Button
                style="@style/digit"
                android:text="1" />

            <Button
                style="@style/digit"
                android:text="2" />

            <Button
                style="@style/digit"
                android:text="3" />

            <Button
                style="@style/purple"
                android:text="−" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/operation"
                android:text="x⁻¹"
                android:backgroundTint="@color/parenthesis" />
            <Button
                style="@style/digit"
                android:text="0" />


            <Button
                style="@style/cal_button"
                android:onClick="addDecimalPoint"
                android:text="." />

            <Button
                style="@style/operation"
                android:textSize="24sp"
                android:text="+/-" />

            <Button
                style="@style/purple"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
